    <!-- 위 3개의 메타 태그는 *반드시* head 태그의 처음에 와야합니다; 어떤 다른 콘텐츠들은 반드시 이 태그들 *다음에* 와야 합니다 -->
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- 부트스트랩 -->
    <link rel='stylesheet' href="/stylesheets/css/bootstrap.min.css">
  </head>
  <body>
    <!--header.ejs include-->
    <% include ./header %>

    <% var arr= new Array(); %>
    <% for(var i=0 ;i < 35 ; i++) arr[i] = new Array(); %>
    <% for(var i=0 ;i < 35 ; i++){ for(var j = 0 ; j < 8 ; j++ ) {arr[i][j]=0;} } %>
    <% var names = ["Mon", "Tue", "Wed", "Thu", "Fri", "Sat", "Sun"]; %>
    <div class="calendar-container">
      <div class="calendar-header">
        <button type="button" class="btn btn-outline-dark" onclick="location.href='/?shift=<%= shift-1 %>';">Prev</button>
        <h1 style="margin: 0px 150px">
           <%= month %> 월
        </h1>
        <button type="button" class="btn btn-outline-dark" onclick="location.href='/?shift=<%= shift+1 %>';">Next</button>
        <p><%= year %></p>
      </div>
      <div class="calendar">
        <% for(let i = 0 ; i < 7 ; i++){%>
          <span class="day-name"><%= names[i] %></span>
        <% } %>
        <% var first=0; %>
        <% if(days[0]==1){ var tag_class = "day"; %>
        <% }else{ var tag_class = "day day--disabled"; }%>
        <% var url=""; %>
        <% for(let i = 0 ; i < 7*lines ; i++){ %>

          <% if(i > 0 && i < 25 && days[i-1] > days[i] ) {%>
          <% first=i;%>
          <% url="./list?date="; %>
          <% tag_class = "day"; } %>
          <% if(i>25 && days[i-1] > days[i] ) {%>
          <% tag_class = "day day--disabled"; } %>
        <div class= '<%= tag_class %>' <% if(tag_class=="day"){ %> onclick="location.href= '<%= url %><%= days[i]%>';" <% }%>><%= days[i] %></div>
        <%}%>

        <% event_array.forEach(function(ign1,i,ign2){%>

          <% var str_date = first+event_array[i].start; %>
          <% var row = parseInt((str_date-1) / 7)+2; %>

          <% var col = str_date % 7; if(col==0){col=7;}%>
          <% var len=event_array[i].end - event_array[i].start + 1; %>
          <% var j; %>
          <% for(j = 0 ; j < 8 ; j++ ) {%>

          	<% var suc=1; %>
          	<% for( var k=str_date;k<=first+event_array[i].end;k++){ %>

          		<% if(arr[k][j]==1){ %>
          			<% suc=0; %>
          			<% break; }}%>
          	<% if(suc==1) {%>
          		<% for( k=str_date;k<=first+event_array[i].end;k++){ %>
          			<% arr[k][j]=1;}  %>
          		<% break; }}%>
          <% if( j==8 ){ %>
          	<% console.log("에라남")} %>
          <% j = j*(-40)-45;;%>
          <% if (col + len < 9) {%>
          <section class="task task--warning" style="grid-column: <%= col %> / span <%= len %>;grid-row:<%= row %>;bottom: <%= j %>px"  >
            <%=event_array[i].event_title %>
          </section>
          <% }else{ %>
          <!-- 하위 -->

            <% var temp = 8-col; %>
            <% var row_add = row+1; %>
            <% var len_col = len - temp; %>
            <% var real_len_col = len_col; %>
            <section class = "task task--warning" style="grid-column: <%= col %> / span <%= temp %>; grid-row: <%= row %>; bottom: <%= j %>px" >
            <%= event_array[i].event_title %>
          </section>
            <% while(len_col>0) { %>
                <% if ( len_col <=7) { %>
                    <section class = "task task--warning" style="grid-column: 1 / span <%= len_col %>; grid-row:<%= row_add %>; bottom: <%= j %>px" >
                        <%= event_array[i].event_title %>
                    </section>

                <% }else{ %>
                    <% var seven = 7; %>
          <!-- 제발 -->
                    <section class = "task task--warning" style="grid-column: 1 / span <%= seven %>; grid-row:<%= row_add %>; bottom: <%= j %>px" >
                        <%= event_array[i].event_title %>
                    </section>

                <% } %>
                    <% row_add++; %>
                    <% len_col -= 7; %>
            <%}%>

          <%}%>
        <%});%>
        <section class="task task--primary">Product Checkup 1
          <div class="task__detail">
            <h2>Product Checkup 1</h2>
            <p>15-17th November</p>
          </div>
        </section>
        <section class="task task--info">Product Checkup 2</section>
      </div>
    </div>
